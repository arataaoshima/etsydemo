

<div class="row center">
  <div class="col-md-6">
    <%= image_tag @listing.image.url, class:"show-images" %>
  </div>
  <div class="col-md-6 center">
    <h3><%= @listing.name %></br></h3>
    <p><%= @listing.description %></br></p>
    <p><%= number_to_currency(@listing.price) %></p>
    <p><%= link_to "Buy now",new_listing_order_path(@listing), class:"btn btn-outline-primary" %></p>
  </div>
</div>
<% if user_signed_in? && current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class:"btn btn-link"  %> |
<% end %>
<%= link_to 'Back', listings_path, class:"btn btn-link"  %>
