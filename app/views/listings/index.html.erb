<p id="notice"><%= notice %></p>


<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="card">
          <a href=<%= "/listings/#{listing.id}" %>>
          <%= image_tag listing.image.url, class: "card-img-top" %>
          </a>
        <div class="card-body">
          <div class="card-title">
            <%= listing.name %>
          </div>
          <div class="card-body">
            <%= listing.description %></br>
            $ <%= listing.price %></br>
            <% if listing.user %>
              Sold by: <%= listing.user.name %>
            <% end %>
          </div>
          <%= link_to 'Show', listing, class:"btn btn-link" %></br>
    
        </div>
      </div>
    </div>
  <% end %>
</div>
<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class:"btn btn-link"  %>
<% end %>
