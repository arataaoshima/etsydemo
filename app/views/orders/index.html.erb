<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Listing ID</th>
      <th>Buyer Name</th>
      <th>Seller Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.listing_id %></td>
        <td><%= order.id %></td>
        <td><%= order.buyer.name %></td>
        <td><%= order.seller.name %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order',  new_listing_order_path %>
